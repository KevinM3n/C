
#include<iostream>
#include<cstring>
#include<vector>
using namespace std;

struct student
{
  char name[99];
  int id;
  float gpa;
};

void print(student a)
{
  cout << "Name: " ;
  for (int i = 0; i <= strlen(a.name); i++)
        {
          cout  << a.name[i];
        }
      cout << " ID: " << a.id;
       cout << " GPA: " << a.gpa << endl;
  return;
}

int main()
{

  vector<student> studentlist(99);
  char name[99];
  int id;
  float gpa;
  int numberofstudent =0;
   while (numberofstudent < 3)
    {


  cout << "Name?" << endl;
  cin.get(name,99);

  int length = strlen(name);
  name[length] = '\0';
  for (int i = 0 ; i<= length; i++)
    {
  studentlist.at(numberofstudent).name[i] = name[i];
    }
 cout << "ID?" << endl;

  cin >> id;
  cin.get();
  studentlist.at(numberofstudent).id = id;

  cout << "GPA?" << endl;
  cin >> gpa;
  cin.get();
  studentlist.at(numberofstudent).gpa = gpa;
  numberofstudent +=1 ;
  }
  

  for (int j=0 ; j<= numberofstudent; j++)
    {
      if (studentlist.at(j).id == 123456)
        {


          studentlist.erase(studentlist.begin() + j);
          numberofstudent -= 1;
          break;
        }

    }
  for (int i = 0; i <= numberofstudent; i++)
    {
      if (strcmp(studentlist.at(i).name, "cheng") == 0)
        {
 
          studentlist.erase(studentlist.begin() + i);
          numberofstudent -= 1;
          break;
        }

    }

  cout << "Student total: " << numberofstudent << endl;

  for (int k = 0; k < numberofstudent ; k++)
    {
      print(studentlist.at(k));
    }
return 0;
}




